<?xml version="1.0" encoding="UTF-8"?>
<server description="Budget Specialist Server">
    <featureManager>
        <feature>jsp-2.3</feature>
        <feature>jsf-2.2</feature>
        <feature>servlet-3.1</feature>
    </featureManager>

    <httpEndpoint id="defaultHttpEndpoint"
                  host="*"
                  httpPort="9080"
                  httpsPort="9443" />

    <applicationMonitor updateTrigger="polled" pollingRate="500ms"/>

    <webApplication id="budget-specialist"
                    location="budget-specialist.war"
                    contextRoot="/budget-specialist"/>
</server>
